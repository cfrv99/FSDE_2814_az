<form action="/ToDo/Add" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Item</label>
        <input type="text" class="form-control" id="Title" name="Title" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
        <input class="btn btn-success" type="submit" value="Add New Item" />
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Status</th>
            <th scope="col">Operations</th>
            <th scope="col">Check Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.Id</th>
                <td scope="row">@item.Title</td>
                <td scope="row">@(item.IsDone == true ? "Done":"Not Done")</td>
                <td scope="row"><a href="/ToDo/Delete/@item.Id" class="btn btn-danger"> Delete </a><a class="btn btn-info">Edit</a></td>
                <td scope="row">
                    <form action="/ToDo/SelectTask" method="post">
                        <input type="hidden" value="@item.Id" name="model.Id" id="model.Id" />
                        @if (item.IsDone)
                        {
                            <div class="form-group form-check">
                                <input checked type="checkbox" class="form-check-input" value="true" id="IsDone" name="IsDone">
                                <label class="form-check-label" for="exampleCheck1"></label>
                            </div>

                        }
                        else
                        {
                            <div class="form-group form-check">
                                <input onchange="handleChange()" type="checkbox" class="form-check-input" value="true" id="IsDone"  name="IsDone">
                                <label class="form-check-label" for="exampleCheck1"></label>
                            </div>
                        }
                        <input type="submit" name="Submit" value="Submit" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
